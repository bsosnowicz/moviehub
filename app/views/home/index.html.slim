= stylesheet_link_tag 'home', media: 'css'
div.trendingContainer

  h3.headerTitle = "What to watch"
  h4.headerSubline = "Top picks"
  p.headerSubheading = "TV shows and movies just for you"
  ul.homeItemsList
    - @movies.each do |movie|
      li
        =link_to movie do
          = image_tag movie.my_file.attached? ? url_for(movie.my_file) : movie.image_url, class:"homeItemThumbnail"
          div.homeItemDescription
            h4.homeItemTitle = movie.title
            div.homeItemDetails
              span.homeItemRating #{movie.rating}
              = "â€¢"
              span.homeItemCategory #{movie.category}

